<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblTotalConta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total da conta:" />

            <EditText
                android:id="@+id/txtTotalConta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblNumeroPessoas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NÃºmero de pessoas:" />

            <EditText
                android:id="@+id/txtPessoas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblGorjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gorjeta:" />

            <SeekBar
                android:id="@+id/skGorjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center">

            <TextView
                android:id="@+id/lblValorGorjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor da gorjeta" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center">

            <TextView
                android:id="@+id/lblValorTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor total" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center">

            <TextView
                android:id="@+id/lblTotalPessoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total por pessoa" />

        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>